@{
    ViewBag.Title = "Product";
}
<hr />
<div class="container">
    <div class="col-md-4">
        <h2>Product</h2>
        <table class="table table-condensed table-bordered table-hover table-striped">
            <thead>
                <tr class="btn-primary">
                    <th><b>ID</b></th>
                    <th><b>Base Product Name</b></th>
                    <th><b>Bay No</b></th>
                    <th><b>Active</b></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>LPG</td>
                    <td>Bay-01</td>
                    <td>Yes</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>LPG</td>
                    <td>Bay-02</td>
                    <td>Yes</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>LPG</td>
                    <td>Bay-03</td>
                    <td>Yes</td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>Condensate</td>
                    <td>Bay-04</td>
                    <td>Yes</td>
                </tr>
                <tr>
                    <td>5</td>
                    <td>Condensate</td>
                    <td>Bay-05</td>
                    <td>Yes</td>
                </tr>
                <tr>
                    <td>6</td>
                    <td>Condensate</td>
                    <td>Bay-06</td>
                    <td>Yes</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-md-8">
        <div class="form-group ">
            <div class="btn-group col-md-offset-4">
                <button type="button" class="btn btn-primary">New</button>
                <button type="button" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-primary">Delete</button>
            </div>
        </div>
        <form class="form-horizontal">
            <div class="form-group">
                <label for="prdName" class="col-md-4 control-label">Base Product Name</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="prdName" placeholder="Base Product Name" />
                </div>
            </div>
            <div class="form-group">
                <label for="density" class="col-md-4 control-label">Density</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="density" placeholder="(x.xxxx)" />
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-md-4 control-label">Must Weigh Out</label>
                <div class="col-md-4">
                    <input type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-md-4 control-label">Active</label>
                <div class="col-md-4">
                    <input type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label for="lastActive" class="col-md-4 control-label">Last Active</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="lastActive" placeholder="Date/Time" />
                </div>
            </div>
            <div class="form-group">
                <label for="remarks" class="col-md-4 control-label">Remarks</label>
                <div class="col-md-4">
                    <textarea class="form-control" rows="2" id="remarks" placeholder="Message (Max 200 Characters)"></textarea>
                </div>
            </div>
        </form>
    </div>
</div>




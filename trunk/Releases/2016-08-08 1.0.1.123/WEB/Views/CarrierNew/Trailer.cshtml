                    <div class="col-md-4">
                        <input type="text" class="form-control" id="maxTar" placeholder="Max Tar Weight" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="minLoad" class="col-md-4 control-label">Min Loaded Weight</label>
                    <div class="col-md-4">

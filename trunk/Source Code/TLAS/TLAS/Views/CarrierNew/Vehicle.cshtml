                <li><a href="#">5</a></li>
                <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
            </ul>
        </div>
        <div class="container">
            <h2>Trailer</h2>
            <table class="table table-condensed table-bordered table-hover table-striped">
                <thead>
                    <tr class="btn-primary">
                        <th><b>ID</b></th>
                        <th><b>Trailer</b></th>
                        <th><b>Compartments</b></th>
                        <th><b>Capacity</b></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>demo001</td>
                        <td>1</td>
                        <td>1000</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group ">
            <div class="btn-group col-md-offset-4">
                <button type="button" class="btn btn-primary">New</button>
                <button type="button" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-primary">Delete</button>
                @Html.ActionLink("Trailer", "Trailer", "Carrier", new { @class = "btn btn-primary" })
            </div>
        </div>
        <form class="form-horizontal">
            <div class="form-group">
                <label for="vehCode" class="col-md-4 control-label">Vehicle Code</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="vehCode" placeholder="Vehicle Code" />
                </div>
            </div>
            <div class="form-group">
                <label for="licNo" class="col-md-4 control-label">Opreation License No</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="licNo" placeholder="Number" />
                </div>
            </div>
            <div class="form-group">
                <label for="licDate" class="col-md-4 control-label">License Issue Date</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="licDate" placeholder="Issue Date" />
                </div>
            </div>
            <div class="form-group">
                <label for="expDate" class="col-md-4 control-label">License Expiry Date</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="expDate" placeholder="Expiry Date" />
                </div>
            </div>
            <div class="form-group">
                <label for="compSelect" class="col-md-4 control-label">Company</label>
                <div class="col-md-4">
                    <select id="compSelect" class="form-control">
                        <option>Shawal Ltd</option>
                        <option>Sohaib Ltd</option>
                        <option>Marwal Group</option>
                        <option>Shawal International</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="custSelect" class="col-md-4 control-label">Driver</label>
                <div class="col-md-4">
                    <select id="custSelect" class="form-control">
                        <option>Nasir</option>
                        <option>Amjad</option>
                        <option>Nisar</option>
                        <option>Bilal</option>
                        <option>Kamal</option>
                        <option>Sohail</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="" class="col-md-4 control-label">Active</label>
                <div class="col-md-4">
                    <input type="checkbox" />
                </div>
            </div>
            <div class="form-group">
                <label for="lastActive" class="col-md-4 control-label">Last Active</label>
                <div class="col-md-4">
                    <input type="text" class="form-control" id="lastActive" placeholder="Date/Time" />
                </div>
            </div>
            <div class="form-group">
                <label for="remarks" class="col-md-4 control-label">Remarks</label>
                <div class="col-md-4">
                    <textarea class="form-control" rows="2" id="remarks" placeholder="Message (Max 200 Characters)"></textarea>
                </div>
            </div>
        </form>
    </div>
</div>

